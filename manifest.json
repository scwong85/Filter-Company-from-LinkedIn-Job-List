{
  "name": "LinkedIn Company Filter",
  "description": "Filter companies from LinkedIn job listing",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting", "contextMenus", "notifications", "tabs"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
		{
			"js": ["content.js"],
			"matches": ["<all_urls>" ]
		}
	]
}